\definecolor{butter}{rgb}{0.98824, 0.91373, 0.30980}		% #fce94f
\definecolor{orange}{rgb}{0.98824, 0.68627, 0.24314}		% #fcaf3e
\definecolor{purple}{rgb}{0.30078, 0.04297, 0.49609}            % #4E0B7F
\definecolor{almostblack}{rgb}{0.17578, 0.19922, 0.19922}       % #4E0B7F
\definecolor{darkgreen}{rgb}{0.15234, 0.48438, 0.15234}         % #4E0B7F

\setbeamercolor{headline}{bg=almostblack}
\setbeamercolor{footline}{bg=almostblack}
\setbeamerfont{footline}{size=\large}
\setbeamercolor{separation line}{bg=almostblack}
\setbeamercolor{title in headline}{fg=butter}
\setbeamercolor{author in headline}{fg=orange}
\setbeamercolor{institute in headline}{fg=lightgray}

\setbeamercolor{framesubtitle}{fg=purple, bg=gray}
\setbeamercolor{author in head/foot}{fg=orange,bg=almostblack}
\setbeamercolor{title in head/foot}{fg=butter,bg=black}
\setbeamercolor{website in footline}{fg=butter,bg=almostblack}
\setbeamercolor{email in footline}{fg=butter,bg=almostblack}
\setbeamercolor{local structure}{fg=purple}

\setbeamercolor*{normal text}{fg=black, bg=white}
\setbeamercolor*{block body}{fg=black,bg=white}
\setbeamercolor*{block title}{bg=purple,fg=white}
\setbeamerfont{block title}{size=\large,series=\sc\bf}
\setbeamercolor{upper separation line head}{fg=almostblack}



